<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".cash_calculator.CashCalulator">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/plusBackground"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="InvalidId" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore="TextSizeCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:text="@string/words"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="NestedWeights,RtlSymmetry" />


            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.3"
                android:scrollbarAlwaysDrawHorizontalTrack="false">

                <TextView
                    android:id="@+id/word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:isScrollContainer="true"
                    android:padding="6dp"
                    android:scrollbarStyle="insideInset"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.1"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:text="@string/currency"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="NestedWeights,RtlSymmetry" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:text="@string/qty"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"

                android:paddingStart="4dp"
                android:text="@string/amount"
                android:textColor="@color/black"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:text="@string/total"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/totalpic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:text="@string/_00"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/totalSum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:text="@string/_00"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttomLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/plusBackground"
                android:gravity="center"
                android:hint="Plus(+)"
                android:inputType="number|numberSigned"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="19sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Manual Amt"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/minuse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/plusBackground"
                android:gravity="center"

                android:hint="Minus(-)"
                android:inputType="number|numberSigned"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="19sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="5">

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/twothousand" />

                    <TextView style="@style/for_x" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        app:counterOverflowTextAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:errorIconDrawable="@color/material_dynamic_primary50"
                        app:hintTextColor="#FF5722">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Ed2000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="QTY"

                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="#000000"
                            app:textInputLayoutFocusedRectEnabled="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/for_equal" />

                    <TextView
                        android:id="@+id/rst2000"
                        style="@style/for_result" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="5">

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/fivehundrad" />

                    <TextView style="@style/for_x" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Ed500"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="QTY"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="#000000"
                            app:textInputLayoutFocusedRectEnabled="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/for_equal" />

                    <TextView
                        android:id="@+id/rst500"
                        style="@style/for_result" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="5">

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/twohundrad" />

                    <TextView style="@style/for_x" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Ed200"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="QTY"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="#000000"
                            app:textInputLayoutFocusedRectEnabled="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/for_equal" />

                    <TextView
                        android:id="@+id/rst200"
                        style="@style/for_result" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="5">

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/onehundrad" />

                    <TextView style="@style/for_x" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Ed100"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="QTY"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="#000000"
                            app:textInputLayoutFocusedRectEnabled="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/for_equal" />

                    <TextView
                        android:id="@+id/rst100"
                        style="@style/for_result" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="5">

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/fifty" />

                    <TextView style="@style/for_x" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Ed50"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="QTY"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="#000000"
                            app:textInputLayoutFocusedRectEnabled="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/for_equal" />

                    <TextView
                        android:id="@+id/rst50"
                        style="@style/for_result" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="5">

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/twenty1" />

                    <TextView style="@style/for_x" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Ed20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="QTY"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="#000000"
                            app:textInputLayoutFocusedRectEnabled="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/for_equal" />

                    <TextView
                        android:id="@+id/rst20"
                        style="@style/for_result" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="5">

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ten" />

                    <TextView style="@style/for_x" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Ed10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="QTY"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="#000000"
                            app:textInputLayoutFocusedRectEnabled="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/for_equal" />

                    <TextView
                        android:id="@+id/rst10"
                        style="@style/for_result" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="5">

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/five" />

                    <TextView style="@style/for_x" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Ed5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="QTY"
                            android:inputType="number"
                            android:maxLength="10" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/for_equal" />

                    <TextView
                        android:id="@+id/rst5"
                        style="@style/for_result" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="5">

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/two" />

                    <TextView style="@style/for_x"
                        tools:ignore="TooManyViews" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Ed2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="QTY"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="#050505" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/for_equal" />

                    <TextView
                        android:id="@+id/rst2"
                        style="@style/for_result" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="5">

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/one" />

                    <TextView style="@style/for_x" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Ed1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="QTY"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="#050505" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/for_equal" />

                    <TextView
                        android:id="@+id/rst1"
                        style="@style/for_result" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:onClick="shareText"
            android:padding="1dp"
            android:src="@drawable/share"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/speak"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="1dp"
            android:src="@drawable/speaker" />

    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>


